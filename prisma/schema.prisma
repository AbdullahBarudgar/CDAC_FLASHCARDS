// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Deck {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  cards Card[]
}

model Card {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  front String
  back  String
  deck  Deck   @relation(fields: [deckId], references: [id])
  deckId String @db.ObjectId
}